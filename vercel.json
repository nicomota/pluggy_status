{
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/login",
      "destination": "/api/login"
    },
    {
      "source": "/auth",
      "destination": "/api/auth"
    },
    {
      "source": "/logout",
      "destination": "/api/logout"
    },
    {
      "source": "/user",
      "destination": "/api/user"
    },
    {
      "source": "/status",
      "destination": "/api/status"
    }
  ]
}